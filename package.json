{
  "name": "laradoc-trans",
  "version": "0.1.0",
  "description": "Translate Laravel docs using Gemini CLI.",
  "main": "dist/main.js",
  "files": [
    "dist",
    "resources"
  ],
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc",
    "dev": "ts-node src/main.ts",
    "prepare": "node -e \"require('fs').writeFileSync('dist/main.js', '#!/usr/bin/env node\n' + require('fs').readFileSync('dist/main.js'))\""
  },
  "bin": {
    "laradoc-trans": "dist/main.js"
  },
  "keywords": [
    "laravel",
    "docs",
    "translator",
    "gemini"
  ],
  "author": "Pigo Chu <pigochu@gmail.com>",
  "license": "AGPL V3",
  "os": [
    "!win32"
  ],
  "engines": {
    "node": "^22.0.0"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "i18next": "^25.4.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-fs-backend": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "fs-extra": "^11.3.1",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}